<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.5" client="administrator" method="upgrade">
	<name>mod_content</name>
	<author>Joomla! Project</author>
	<creationDate>June 2015</creationDate>
	<copyright>Copyright (C) 2005 - 2015 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.5.0</version>
	<description>MOD_CONTENT_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_content">mod_content.php</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_content.ini</language>
		<language tag="en-GB">en-GB.mod_content.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_ADMIN_CONTENT" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="count"
					type="text"
					label="MOD_CONTENT_FIELD_COUNT_LABEL"
					description="MOD_CONTENT_FIELD_COUNT_DESC"
					default="5"
				/>

				<field
					name="ordering"
					type="list"
					label="MOD_CONTENT_FIELD_ORDERING_LABEL"
					description="MOD_CONTENT_FIELD_ORDERING_DESC"
					default="created"
				>
					<option value="created">JGLOBAL_CREATED_DATE</option>
					<option value="modified">JGLOBAL_MODIFIED_DATE</option>
					<option value="hits">JGLOBAL_HITS</option>
				</field>

				<field
					name="direction"
					type="radio"
					label="JGLOBAL_ORDER_DIRECTION_LABEL"
					description="JGLOBAL_ORDER_DIRECTION_DESC"
					class="btn-group btn-group-yesno"
					default="0"
				>
					<option value="1">JGLOBAL_ORDER_ASCENDING</option>
					<option value="0">JGLOBAL_ORDER_DESCENDING</option>
				</field>

				<field
					name="catid"
					type="category"
					label="JCATEGORY"
					description="MOD_CONTENT_FIELD_CATEGORY_DESC"
					extension="com_content"
				>
					<option value="">JOPTION_ANY_CATEGORY</option>
				</field>

				<field
					name="authors"
					type="list"
					label="MOD_CONTENT_FIELD_AUTHORS_LABEL"
					description="MOD_CONTENT_FIELD_AUTHORS_DESC"
					default="0"
				>
					<option value="0">MOD_CONTENT_FIELD_AUTHORS_OPTION_ANYONE</option>
					<option value="by_me">MOD_CONTENT_FIELD_AUTHORS_OPTION_BY_ME</option>
					<option value="not_me">MOD_CONTENT_FIELD_AUTHORS_OPTION_NOT_BY_ME</option>
				</field>

				<field
					name="show_hits"
					type="radio"
					label="MOD_CONTENT_FIELD_SHOW_HITS_LABEL"
					description="MOD_CONTENT_FIELD_SHOW_HITS_DESC"
					class="btn-group btn-group-yesno"
					default="0"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="show_state"
					type="radio"
					label="MOD_CONTENT_FIELD_SHOW_STATE_LABEL"
					description="MOD_CONTENT_FIELD_SHOW_STATE_DESC"
					class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="show_author"
					type="radio"
					label="MOD_CONTENT_FIELD_SHOW_AUTHOR_LABEL"
					description="MOD_CONTENT_FIELD_SHOW_AUTHOR_DESC"
					class="btn-group btn-group-yesno"
					default="1"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
